<%= turbo_stream.replace 'first-like-button' do %>
  <button type="submit" class="flex items-center space-x-1 bg-fuchsia-500 text-white px-4 py-2 rounded-full hover:bg-teal-600">
    <i class="fa-thin fa-comment-heart text-pink-600"></i>
    <p class="text-xs"><%= @post.likes.where(like_type: 'like_first').count %></p>
  </button>
<% end %>