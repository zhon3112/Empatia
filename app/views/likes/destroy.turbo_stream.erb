<% case params[:like_type] %>
<% when 'like_first' %>
  <%= turbo_stream.replace "first-like-button-#{@post.id}" do %>
    <%= render 'posts/first_unlike', post: @post %>
  <% end %>
  <%= turbo_stream.update "like-count-like_first-#{@post.id}" do %>
    <%= @post.likes.where(like_type: 'like_first').count %>
  <% end %>

