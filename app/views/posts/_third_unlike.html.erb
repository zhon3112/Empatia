<% like = @user_likes[post.id]&.find { |l| l.like_type == 'like_third' } %>

<%= form_with url: post_like_path(post, like), method: :delete, data: { turbo_stream: true }, html: { id: "like_third-like-button-#{post.id}" } do %>
  <%= hidden_field_tag :like_type, 'like_third' %>
  <button type="submit" class="flex items-center space-x-1 text-gray-400 px-4 py-2">
    <i class="fa-solid fa-face-angry text-red-600"></i>
    <p class="text-xs" id="like-count-like_third-<%= post.id %>">
      <%= @likes_by_post[post.id]&.count { |l| l.like_type == 'like_third' } || 0 %>
    </p>
  </button>
<% end %>