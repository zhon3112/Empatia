<!--- _like_buttonsにrenderさせる --->
<%= form_with url: post_likes_path(post), method: :post, data: { turbo_stream: true }, html: { id: "second-like-button-#{post.id}" } do %>
  <%= hidden_field_tag :like_type, 'like_second' %>
  <button type="submit" class="flex items-center space-x-1 text-gray-400 px-4 py-2">
    <i class="fa-solid fa-heart-crack text-blue-950"></i>
    <p class="text-xs" id="like-count-like_second-<%= post.id %>">
      <%= post.likes.where(like_type: 'like_second').count %>
    </p>
  </button>
<% end %>
