<h2>検索欄</h2>
<%= render 'search_form', q: @q, url: posts_path %>
<% if @message %>
  <p><%= @message %></p>
<% end %>

<!--- ページ用のタブ --->
<div role="tablist" class="tabs tabs-bordered">
  <div role="tab" class="tab">
    <span class="tab-link active">みんなの投稿</span>
  </div>
  <div role="tab" class="tab">
    <%= link_to '自分の投稿', my_posts_path(current_user) %>
  </div>
  <div role="tab" class="tab">
    <%= link_to 'いいね一覧', my_likes_path(current_user) %>
  </div>
</div>

<!--- みんなの投稿を表示 --->
<div id="tab-content">
  <% if @posts.any? %>
    <%= render @posts, likes_by_post: @likes_by_post %>
  <% else %>
    <p><%= @message %></p>
  <% end %>
</div>