<!--- いいね6  _like_buttonsにrenderさせる --->
<% like = post.likes.find_by(like_type: 'like_sixth', user: current_user) %>
<% if like %>
  <%= form_with url: post_like_path(post, like), method: :delete, data: { turbo_stream: true }, html: { id: "sixth-like-button-#{post.id}" } do %>
    <%= hidden_field_tag :like_type, 'like_sixth' %>
    <button type="submit" class="flex items-center space-x-1 text-gray-400 px-4 py-2">
      <i class="fa-solid fa-hands-praying text-orange-200"></i>
      <p class="text-xs" id="like-count-like_sixth-<%= post.id %>">
        <%= post.likes.where(like_type: 'like_sixth').count %>
      </p>
    </button>
  <% end %>
<% else %>
  <%= render 'posts/sixth_like', post: post %>
<% end %>